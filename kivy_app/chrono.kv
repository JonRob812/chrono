<BackDrop>:
    color: 0,0,0,0
    canvas:
        Color:
            rgba: self.color
        Rectangle:
            size: self.size

<Grid>:
    fps_label: fps_label
    fps_hist: fps_hist
    backdrop: backdrop
    undo_button: undo_button
    reset_button: reset_button
    average_label: average_label

    BackDrop:
        id: backdrop
        center: root.center
        size: root.size

    GridLayout:
        size: root.width, root.height
        rows: 2
        cols: 1
        Label:
            text: "FPS"
            id: fps_label
            font_size: self.parent.height / 5
            color: 1,.15,1,1

        GridLayout:
            size: self.parent.width, self.parent.height
            rows:1
            cols: 2

            TextInput:
                text: ""
                id: fps_hist
                foreground_color: 1,1,1,1
                background_color: 0,0,0,0

            GridLayout:
                size: self.parent.width, self.parent.height
                rows:3
                cols: 1
                Label:
                    id: average_label
                    text: 'avg: '
                Button:
                    size_hint_y: .3
                    id: reset_button
                    background_color: 1,0,0,1
                    text: 'Reset'
                    on_press: root.reset()
                Button:
                    id: undo_button
                    background_color: 1,0,1,1
                    text: "Undo Last"
                    on_press: root.undo()
